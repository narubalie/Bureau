@require '../../../assets/styles/config.styl'

.grid
  height: calc(100vh - 100px)
  align-content: center;

.doctor
  background-color: white
  border-radius: 4px  
  &:hover span
    opacity: 1

.date
  padding-top: 20px
  padding-bottom: 0px
  margin-bottom: 0px

.el-carousel__item 
  background-color: white
  border-radius: 4px
  &:hover span
    opacity: 1

.el-carousel__item img
  object-fit: cover
  width: 100%
  height: 100%

.el-carousel__item .textBlock
  position: absolute
  width: 100%
  bottom 0
  left 0
  background: #273845;
  opacity: 0.9

.el-carousel__item h3, p
  padding-bottom: 10px
  margin 0px 30px
  color: #fff;

.el-carousel__item:hover
  transform: translateY(20);
  box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);