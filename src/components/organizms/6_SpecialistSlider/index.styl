@require '../../../assets/styles/config.styl'

.block
  height: 80vh
  display: flex
  align-items: center
  justify-content: center

.el-carousel 
  overflow: hidden

.doctor
  background-color: #F1F7F7
  border-radius: 4px  
  &:hover span
    opacity: 1

.doctor span
  background-blend-mode: overlay;
  backdrop-filter: contrast(40%);
  position: absolute
  bottom 0
  left 0
  background: #273845;
  opacity: 0.9

.el-carousel__item h3
  margin 40px 30px 16px 30px
  color: #fff;

.el-carousel__item p
  color: #fff;
  margin 0px 30px 40px 30px

.el-carousel__item:hover
  transform: translateY(20);
  box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);
