@require '../../../assets/styles/config.styl'

.topText
  margin-top: 10vh

.doctorText
  text-align: left

.imgLeft
  height: 60vh

.el-row
  margin-bottom 5vh

.el-col
  padding: 20px

.doctor div
  padding: 0

h3
  font-size: 20px

.el-card
  &:hover
    box-shadow: 0px 15px 40px rgba(39, 56, 69, 0.2)

.doctor
  background-color: #FFF
  border-radius: 4px
  &:hover span
    opacity: 1

img
  height: 300px
  width: auto

span
  background-blend-mode: overlay;
  backdrop-filter: contrast(40%);
  background: #273845;
  opacity: 0.9