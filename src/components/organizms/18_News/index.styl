@require '../../../assets/styles/config.styl'

.date
  padding-top: 20px
  padding-bottom: 0px
  margin-bottom: 0px

.content
  margin-bottom: 10vh

.newsCard
  background-color: white
  border-radius: 4px
  display: flex
  align-items: stretch
  overflow hidden
  margin-top: 20px
  margin-bottom: 20px
  &:hover
    transform: translateY(20);
    box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.1);

img
  object-fit: cover
  width: 300px
  height: 400px

.textBlock
  width: 100%
  opacity: 0.9
  padding: 0 20px

.head
  grid-column-start: 3
  grid-column-end: 7
  margin-top: 10vh

.desc
  opacity 0.5