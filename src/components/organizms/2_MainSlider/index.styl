@require '../../../assets/styles/config.styl'

.el-row
  width 100%
  padding 0

.el-main
  width 100%
  background-color #273845
  color #fff
  height: 75vh
  
.el-carousel {
  height 100%
}

.bannerText
  margin-top: 150px

span
  margin-left: 20px
  border-radius: 4px

.el-button
  left: 0

h1
  color: white
  text-shadow: 2px 4px rgba(39, 56, 69, .75)

p
  color: white
  text-shadow: 1px 2px rgba(39, 56, 69, .75)

.el-carousel__item {
  color: #475669;
  font-size: 14px;
  background: no-repeat center url(../../../assets/elements/bg_grad.png)
  background-size cover
  margin: 0;
}

.el-carousel__item:nth-child(2n) {
  background-color: #99a9bf;
}

.el-carousel__item:nth-child(2n+1) {
  background-color: #d3dce6;
}
