@require '../../../assets/styles/config.styl'

.el-row
  width 100%
  padding 0

.el-main
  width 100%
  background-color #273845
  color #fff
  height: 75vh
  
.el-carousel {
  height 100%
}

.el-carousel__item h1 {
  font-family: Source Serif Pro;
  font-style: normal;
  font-weight: 900;
  line-height: normal;
  font-size: 36px;
  letter-spacing: 0.05em;
  text-transform: uppercase;
}

.el-carousel__item {
  color: #475669;
  font-size: 14px;
  background: no-repeat center url(../../../assets/elements/DSC_8004.jpg)
  background-size cover
  margin: 0;
}

.el-carousel__item:nth-child(2n) {
  background-color: #99a9bf;
}

.el-carousel__item:nth-child(2n+1) {
  background-color: #d3dce6;
}
