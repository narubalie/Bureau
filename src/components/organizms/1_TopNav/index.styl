@require '../../../assets/styles/reset.styl'
@require '../../../assets/styles/config.styl'

.menu
  background-color: $colors.primary
  height: 100px
  width: 100%
  display: grid
  align-items: center;
  grid-template-columns: 3fr 7fr 2fr
  padding: 0 10vw
  position: fixed
  z-index: 50
  text-decoration: none
 
.navLinks a
    color: white
    font-family: $fonts.plain
    font-size: 24px
    text-decoration: none
    padding-right: 24px

.submenu
  text-align: left
  color: white
  font-family: $fonts.heading
  font-weight: bold;
  font-size: 18px;
  padding: 8px 0
  display: block
  text-decoration: none

.links
  color: white
  display: block
  font-family: $fonts.plain
  font-weight: normal;
  font-size: 14px;
  padding: 2px 0
  text-align: left
  text-decoration: none

.search
  display: flex
  color: white
  align-items: center

.search i
  padding-right: 8px

// logo expand block

.Logo
  display: inline-block
  width: 210px
  height 40px
  background no-repeat center url(../../../assets/elements/NewFullLogo.svg)
  background-size contain

// services hover

.expand
  width: 60vw
  display: grid
  grid-gap: 10px
  grid-template-columns: repeat(3, 3fr)
  grid-auto-flow: row
  background-color: $colors.primary
  position: fixed
  z-index: 50
  margin-top: 100px