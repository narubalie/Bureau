@require '../../../assets/styles/reset.styl'
@require '../../../assets/styles/config.styl'

.menu
  background-color: $colors.primary
  height: 100px
  width: 100%
  position: fixed
  z-index: 50
  text-decoration: none
  grid-template-rows: 100px calc(100vh - 100px)

// & logo hover expand block

.logo
  background no-repeat center url(../../../assets/elements/NewFullLogo.svg)
  height: 100%
  transition: 0.5s ease 0s
  display: block
  background-color: rgba(0, 0, 0, 0.1)
  &:hover
    background-color: rgba(0, 0, 0, 0.3)

.logodown
  grid-column-start: 1
  grid-column-end: 3
  display: block
  justify-self: stretch
  &:hover .logoExpand
    display block

.logoExpand
  grid-column-start: 1
  grid-column-end: 3
  color: white
  background-color: $colors.primary
  padding: 24px
  &:hover .logo
    margin-top: 0
  display: none

// logo inside block

.logoNav a
  color: white
  display: block
  text-align: left

.info h3
  color: white
  font-family: $fonts.heading
  font-weight: bold;
  font-size: 24px;
  
.info p, a
    font-family: $fonts.plain
    font-weight: normal;
    font-size: 18px;
    padding: 6px 0
    line-height: 1.3
    text-align: left



// top links

.navLinks
  grid-row-start: 1
  grid-column-start: 3
  grid-column-end: 9
  justify-self: start
  margin: auto 0px
  > a
    height: 100%
    color: white
    font-family: $fonts.plain
    font-size: 24px
    text-decoration: none
    padding-left: 24px
    transition: 0.2s ease 0s
    &:hover
      color: $colors.secondary
  @media (min-width: 600px) and (max-width: 1024px)
    a
      font-size: 18px
  @media (max-width: 780px)
    display: none

// services hover

.dropdown
  > a
    color: white
    font-family: $fonts.plain
    font-size: 24px
    text-decoration: none
    padding-left: 24px
    transition: 0.2s ease 0s
    &:hover
      color: $colors.secondary
  position relative
  display: inline-block;
  &:hover .expand
    display: block

.expand
  background-color: $colors.primary
  // min-width: 60%
  z-index: 50
  padding: 10px
  padding-top: 40px
  position: fixed
  display: none
  columns 3

.submenu
  text-align: left
  display: block
  color: white
  font-family: $fonts.heading
  font-weight: bold;
  font-size: 20px;
  padding: 12px
  text-decoration: none
  &:last-child
    margin-bottom: 0px

.links
  color: white
  display: block
  font-family: $fonts.plain
  font-weight: normal;
  font-size: 15px;
  padding: 4px 0
  line-height: 1.2
  text-align: left
  text-decoration: none
  opacity: 0.5
  &:first-child
    padding-top: 10px
  &:hover
    opacity: 1



// search block

.search
  grid-row-start: 1
  grid-column-start: 9
  grid-column-end: 11
  place-self: center
  width: calc(100% - 20px)
  height: 28px
  margin-right: 20px
  background-color: transparent
  padding-left: 16px
  border-radius: 20px
  border: none
  color: white
  transition: 0.5s ease 0s
  &:hover
    background-color: rgba(255, 255, 255, 0.1)
  &:focus
    border: 1px solid rgba(255, 255, 255, 0.5)
    outline: none
  &::placeholder
    color: white
    opacity: 0.7
    font-family: $fonts.plain
    font-size: 20px;
  &:hover::placeholder
    opacity 1
  &:focus::placeholder
    opacity 0
  @media (max-width: 1024px)
    grid-column-start: 7

.search i
  padding-right: 8px
  @media (max-width: 899px)
    justify-self: end
    margin-right: 40px
    