@require '../../../assets/styles/config.styl'

.content
  grid-column-end: 7
  display: grid
  margin-bottom: 10vh
  margin-top: 10vh

.doctor
  background-color: white
  border-radius: 4px
  margin: 20px
  overflow hidden
  height: 50vh
  position relative
  transition: .4s ease 0s
  &:hover
    transform: translateY(-4px);
    box-shadow: 0px 15px 40px rgba(39, 56, 69, 0.3);
  &:hover .textBlock
    opacity 0.9
    transition: .4s ease 0s

.doctor > img
  object-fit: cover
  margin-top: 20px
  margin-left: 30px
  height: 100%

.textBlock
  position: absolute
  left: 0
  text-decoration: none
  bottom: 0
  background: #273845;
