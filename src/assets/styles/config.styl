@import url('https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700|IBM+Plex+Serif:700&subset=cyrillic');

// global

$fonts = {
  heading: 'IBM Plex Serif',
  plain: 'Roboto Condensed',
}

$colors = {
  primary: #273845,
  secondary: #89B0AE,
  third: #555B6E,
  accident: #A2F42C
}

$breakpoints = {
  desktop: 1289px,
  tablet: 639px,
  phone: 320px
}

$zIndex = {
  static: 10,
  fixed: 20,
  modal: 30
}

// font: headings, links, lists, etc...

h1
  font-family: $fonts.heading
  color: $colors.primary
  text-align: left
  margin 30px 0
  font-weight: 700;
  font-size: 54px;

h2
  font-family: $fonts.heading
  color: $colors.primary
  font-size: 60px
  font-weight: 400
  margin: 40px 0
  &:before
    display inline-block
    content: ''
    background-image: url('../../../assets/elements/relief.svg')
    background-size: 60px 60px;
    height: 60px;
    width: 60px;
    opacity 0.5
    margin-right: 30px
  &:after
    display inline-block
    content: ''
    background-image: url('../../../assets/elements/relief.svg')
    background-size: 60px 60px;
    height: 60px;
    width: 60px;
    transform: rotate(180deg)
    opacity 0.5
    margin-left: 30px

h3
  font-family: $fonts.heading
  font-style: normal;
  font-weight: 900;
  line-height: normal;
  font-size: 30px;
  text-align: left
  margin: 15px 0
  padding: 0

h4
  font-family: $fonts.plain
  font-weight: 400

a
  font-family: $fonts.plain
  line-height: 19px;
  font-size: 13px;
  cursor pointer
  &:hover
    color: $colors.secondary

p
  font-family: $fonts.plain
  text-align: left
  line-height: 20px;
  font-size: 1em

li
  text-align: left
  font-family: $fonts.plain
  font-size: 14px;

// buttons

.el-button--default
  padding: 16px 24px
  border-radius: 100px
  background-color: transparent
  border: 1px solid $colors.secondary
  font-family: $fonts.heading
  color: $colors.primary
  text-transform: uppercase
  &:hover
    background-color: $colors.primary
    color: white
    border: 1px solid $colors.primary

.el-button--white
  padding: 16px 24px
  border-radius: 100px
  background-color: transparent
  border: 1px solid white
  font-family: $fonts.heading
  color: white
  text-transform: uppercase
  &:hover
    background-color: $colors.primary
    color: white
    border: 1px solid $colors.primary

.el-button--primary
  display block
  padding: 16px 24px
  border-radius: 100px
  margin-top: 20px
  background-color: $colors.accident
  border: none
  font-family: $fonts.heading
  color: $colors.primary
  text-transform: uppercase
  &:hover
    background-color: $colors.primary
    color: white


// other styles

.bgImg
  background-size: cover

.el-card
  box-shadow: 0px 15px 40px rgba(39, 56, 69, 0.2);
  border-radius: 4px;
  background-color: white